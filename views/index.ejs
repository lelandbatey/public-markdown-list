<!DOCTYPE html>
<html>
<head>
	<meta charset="UTF-8">
	<title><% if(title) { %><%= title %><% } %> </title>
	<link rel='stylesheet' href='/css/style.css'>
</head>
<body>
	
	<div id="content">
		
		<% if(page == "list") { %>
		<% if(output) { %>
		<div id="list">
			<ul>
				<% for(var i = 0; i < output.length; i++) { %>
				<li><a href="/<%= output[i].name %>"><%= output[i].name %></a> <%= output[i].size %> bytes, created <%= output[i].modified %></li>
				<% } %>
			</ul>
		</div>
		<% } %>



		<% } else if(page == "single") { %>

		<div id="header">
			<div class="filename">
				<% if(file.url) { %>
				<a href="<%= file.url %>" title="View raw file"><%= file.name %></a>
				<% } else { %>
				<%= file.name %>
				<% } %>
			</div>
			<div class="meta">
				<% if(file.modified) { %>last modified <%= file.modified %>,<% } %> <%= file.size %> bytes
			</div>
		</div>

		<div id="markdown">
			<%- output %>
			<!-- <a href="/">back to list</a> -->
			<% } %>
		</div>

	</div>
	<script>
	(function() {
		var elements = document.getElementsByTagName('code')
		for(var i = 0; i < elements.length; i++) {
			elements[i].className = "prettyprint";
			console.log(elements[i]);
		}
	})();
	</script>
	<script src="https://google-code-prettify.googlecode.com/svn/loader/run_prettify.js"></script>
</body>
</html>